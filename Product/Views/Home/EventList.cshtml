@model EventListViewModel

@{
    ViewData["Title"] = "Etkinlikler";
}

<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>Etkinlikler</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- Event Start -->
<div class="event-area three text-center pt-150 pb-150">
    <div class="container">
        <div class="row">
            @foreach (var item in Model.Events)
            {
                <div class="col-md-4 col-sm-6 col-xs-12">
                    <div class="single-event mb-60">
                        <div class="event-img">
                            <a href="@Url.Action("EventDetail",new{eventSlug = item.Slug,page=(int?) null})">
                                <img src="/img/event/event5.jpg" alt="event">
                                <div class="course-hover">
                                    <i class="fa fa-link"></i>
                                </div>
                            </a>
                            <div class="event-date">
                                <h3>@item.StartDate.Day <span>@item.StartDate.Month</span></h3>
                               
                            </div>
                        </div>
                        <div class="event-content text-left">
                            <h4> <a href="@Url.Action("EventDetail",new{eventSlug = item.Slug,page=(int?) null})">@item.Name</a></h4>
                       
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</div>
