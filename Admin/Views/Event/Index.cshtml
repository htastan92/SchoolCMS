@model Admin.Models.EventListViewModel

@{
    ViewBag.Title = "Etkinlikler";
}
<p>
    @Html.ActionLink("Yeni Etkinlik", "New", "Event", null, new { @class = "btn btn-primary" })
</p>
<table class="table table-bordered" id="dataTable">
    <thead>
        <tr>
            <th>Etkinlik Adı</th>
            <th>Yer</th>
            <th>Durum</th>
            <th>Başlangıç Tarihi</th>
            <th>Bitiş Tarihi</th>
            <th>Kampüs</th>
            <th nowrap>Eylemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model.Events)
        {
            <tr>
                <td>@x.Name</td>
                <td>@x.Location</td>
                <td>@x.Status.Name</td>
                <td>@x.StartDate</td>
                <td>@x.EndDate</td>
                <td>@x.Campus.Name</td>
                <td>
                    <a href="@Url.Action("Edit", "Event", new {id = @x.Id})" class="btn btn-success">Düzenle</a>
                    <a href="@Url.Action("Remove", "Event", new {id = @x.Id})" class="btn btn-danger">Sil</a>
                    <a href="@Url.Action("Draft", "Event", new {id = @x.Id})" class="btn btn-warning">Taslak Yap</a>
                    <a href="@Url.Action("Publish", "Event", new {id = @x.Id})" class="btn btn-info">Yayınla</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Javascript
{
    <script src="@Url.Content("~/Assets/vendor/datatables/jquery.dataTables.js")"></script>
    <script src="@Url.Content("~/Assets/vendor/datatables/dataTables.bootstrap4.js")"></script>
    <script src="@Url.Content("~/Assets/js/demo/datatables-demo.js")"></script>
}