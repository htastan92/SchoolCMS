@using Admin.Helper
@model Admin.Models.CampusEditViewModel
@{
    ViewBag.Title = "Kampüs Düzenle";
}

@using (Html.BeginForm("Edit", "Campus", FormMethod.Post, new { enctype = "multipart/form-data" }))
