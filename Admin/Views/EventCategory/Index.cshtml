@model Admin.Models.EventCategoryListViewModel
@{
    ViewBag.Title = "Etkinlik Kategorileri";
}
    <p>
        @Html.ActionLink("Yeni Etkinlik Kategorisi", "New", "EventCategory", null, new { @class = "btn btn-primary" })
    </p>
<table class="table table-bordered" id="dataTable">
    <thead>
        <tr>
            <th>Id</th>
            <th>Kategori Adı</th>
            <th>Durum</th>
            <th nowrap>Eylemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model.EventCategories)
        {
            <tr>
                <td>@x.Id</td>
                <td>@x.Name</td>
                <td>@x.Status.Name</td>
                <td>
                    <a href="@Url.Action("Edit", "EventCategory", new {id = @x.Id})" class="btn btn-success">Düzenle</a>
                    <a href="@Url.Action("Remove", "EventCategory", new {id = @x.Id})" class="btn btn-danger">Sil</a>
                    <a href="@Url.Action("Draft", "EventCategory", new {id = @x.Id})" class="btn btn-warning">Taslak Yap</a>
                    <a href="@Url.Action("Publish", "EventCategory", new {id = @x.Id})" class="btn btn-info">Yayınla</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Javascript
{
    <script src="@Url.Content("~/Assets/vendor/datatables/jquery.dataTables.js")"></script>
    <script src="@Url.Content("~/Assets/vendor/datatables/dataTables.bootstrap4.js")"></script>
    <script src="@Url.Content("~/Assets/js/demo/datatables-demo.js")"></script>
}