@model Admin.Models.StaffEditViewModel
@using Admin.Helper
@{
    ViewBag.Title = "Eğitmen Düzenle";
}
@using (@Html.BeginForm())
{
    @Html.HiddenFor(model => model.Id)
    <div class="form-horizontal">

        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-2">
                @Html.DisplayNameFor(model => model.FullName)
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.FullName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.FullName, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2">
                @Html.DisplayNameFor(model => model.Sector)
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Sector, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Sector, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2">
                @Html.DisplayNameFor(model => model.BioText)
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.BioText, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.BioText, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2">
                @Html.DisplayNameFor(model => model.StatusId)
            </div>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.StatusId, SelectListHelper.StatusSelectList(), htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.StatusId, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2">
                @Html.DisplayNameFor(model => model.CampusId)
            </div>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.CampusId, SelectListHelper.campusSelectList(), htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CampusId, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md">
                <input type="submit" value="Oluştur" class="btn btn-primary" />
                @Html.ActionLink("Geri Dön", "Index", "Event", null, new { @class = "btn btn-primary" })
            </div>
        </div>
    </div>
}
@section Javascript
{
    <script src="@Url.Content("~/Assets/libs/ckeditor/ckeditor.js")"></script>
}